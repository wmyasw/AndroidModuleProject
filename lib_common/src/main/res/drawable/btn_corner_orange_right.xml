<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--     定义当button获得focus时的形态-->
    <item android:state_checked="true" android:state_enabled="true" >
        <shape>
            <stroke android:width="1dp" android:color="@color/tab_text_color" />

            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="4dp" android:topLeftRadius="0dp" android:topRightRadius="4dp" />

            <solid android:color="@color/tab_text_color" />
        </shape>
    </item>
    <item   android:state_checked="false" >
        <shape>
            <stroke android:width="1dp" android:color="@color/tab_text_color" />

            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="4dp" android:topLeftRadius="0dp" android:topRightRadius="4dp" />

            <solid android:color="@color/tab_text_color" />
        </shape>
    </item>
</selector>