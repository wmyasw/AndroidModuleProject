<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/frame_line_gary"
              android:divider="@drawable/divider"
              android:focusable="true"
              android:orientation="horizontal"
              android:showDividers="middle">

    <Button
        android:id="@+id/btnDecrease"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/btn_amount_left"
        android:gravity="center"
        android:text="-"
        android:textColor="@color/product_text_hit"
        android:textSize="@dimen/textsize_32"/>

    <TextView
        android:id="@+id/etAmount"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@null"
        android:gravity="center"
        android:inputType="number"
        android:minWidth="60dp"
        android:text="1"
        android:textColor="@color/product_text_hit"
        android:textSize="15.36sp"/>

    <Button
        android:id="@+id/btnIncrease"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/btn_amount_right"
        android:gravity="center"
        android:text="+"
        android:textColor="@color/product_text_hit"
        android:textSize="@dimen/textsize_32"/>
</LinearLayout>